{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "sxapi-demo-openshift-www-template",
        "annotations": {
            "openshift.io/display-name": "SXAPI Demo - WWW",
            "description": "Template for building web GUI used in the sxapi openshift demo",
            "description": "SXAPI Demo web frontend",
            "iconClass": "icon-nodejs",
            "tags": "startx,nodejs,web,frontend",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/sxapi-demo-openshift/blob/master/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/sxapi-demo-openshift/issues/new"
        }
    },
    "message": "Your Frontend ${APP_NAME} is starting and you can use openshift console to log into.",
    "labels": {
        "template": "sxapi-demo-openshift-www-template"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "startx-sv-nodejs",
                "annotations": {
                    "openshift.io/display-name": "Base image ${BASE_IMAGE}",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-nodejs",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "Base image for ${APP_NAME} (${BASE_IMAGE})",
                            "description": "SXAPI base image for building ${APP_NAME} application. ",
                            "iconClass": "icon-nodejs",
                            "version": "${BASE_IMAGE_TAG}",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-nodejs.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "${BASE_IMAGE_NS}/${BASE_IMAGE}:${BASE_IMAGE_TAG}"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "SXAPI Demo ${APP_NAME}",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-nodejs",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "${APP_NAME} (WWW)",
                            "description": "SXAPI ${APP_NAME} (www)",
                            "iconClass": "icon-nodejs",
                            "tags": "startx,nodejs,frontend,${APP_NAME},www",
                            "supports": "http,nodejs",
                            "version": "latest"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                }
            },
            "stringData": {
                "DEMO_API": "${DEMO_API}"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_GIT}",
                        "ref": "${SOURCE_BRANCH}"
                    },
                    "contextDir": "${SOURCE_CONTEXT}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "startx-sv-nodejs:latest"
                        },
                        "env": [
                            {
                                "name": "SX_VERBOSE",
                                "value": "true"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}:latest"
                    }
                },
                "resources": {}
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 45,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 2,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "type": "${APP_TYPE}",
                            "provider": "startx",
                            "template": "sxapi-demo-openshift-www-template",
                            "deploymentconfig": "${APP_NAME}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": " ",
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    },
                                    {
                                        "name": "DEMO_API",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}",
                                                "key": "DEMO_API"
                                            }
                                        }
                                    }
                                ],
                                "command": [
                                    "/bin/sx-nodejs"
                                ],
                                "args": [
                                    "run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-nodejs",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 20,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 15,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 2,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-www-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}",
                    "weight": 100
                }
            },
            "status": {
                "ingress": [
                    {
                        "routerName": "router",
                        "conditions": [
                            {
                                "type": "Admitted",
                                "status": "True"
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "www",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application (used for grouping)",
            "value": "frontend"
        },
        {
            "name": "SOURCE_GIT",
            "displayName": "Application source-code repository",
            "description": "URL to the source code to use during build process",
            "value": "https://github.com/startxfr/sxapi-demo-openshift.git",
            "required": true
        },
        {
            "name": "SOURCE_BRANCH",
            "displayName": "Application source-code branch",
            "description": "Name of the branch to use for building this application",
            "value": "test",
            "required": true
        },
        {
            "name": "SOURCE_CONTEXT",
            "displayName": "Application source-code directory context",
            "description": "Name of the source directory where application code reside",
            "value": "www",
            "required": true
        },
        {
            "name": "BASE_IMAGE_NS",
            "displayName": "Base image namespace",
            "description": "Image namespace in docker repository where the build image reside. (if not in local repository, should look for dockerhub namespace)",
            "value": "startx",
            "required": true
        },
        {
            "name": "BASE_IMAGE",
            "displayName": "Base image name",
            "description": "Base image to use for buidling this application",
            "value": "sv-nodejs",
            "required": true
        },
        {
            "name": "BASE_IMAGE_TAG",
            "displayName": "Base image tag",
            "description": "Base image tag (release, flavour) to use for buidling this application",
            "value": "fc27",
            "required": true
        },
        {
            "name": "DEMO_API",
            "displayName": "API base URL",
            "description": "Domain name of the API endpoint to use in this frontend",
            "value": "api-test-demo.apps.startx.fr",
            "required": true
        },
        {
            "name": "WEBHOOK_TOKEN",
            "displayName": "Webhook token",
            "description": "Secret token to use in github, gitlab or other to hook build action when code change",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{24}",
            "required": true
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "description": "Maximum amount of memory the application can use.",
            "value": "128Mi",
            "required": true
        }
    ]
}
