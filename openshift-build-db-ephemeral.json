{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "sxapi-demo-openshift-mariadb-template",
        "annotations": {
            "openshift.io/display-name": "SXAPI Demo - Mariadb",
            "description": "Template for building mariadb database used in the sxapi openshift demo",
            "iconClass": "icon-mariadb",
            "tags": "startx,db,database,backend",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/sxapi-demo-openshift/blob/test/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/sxapi-demo-openshift/issues/new"
        }
    },
    "message": "Your database ${APP_NAME} is starting and you can use openshift console to log into.",
    "labels": {
        "template": "sxapi-demo-openshift-mariadb-template"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "startx-sv-mariadb",
                "annotations": {
                    "openshift.io/display-name": "Base image ${BASE_IMAGE}",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-mariadb",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "Base image for ${APP_NAME} (${BASE_IMAGE})",
                            "description": "SXAPI base image for building ${APP_NAME} application. ",
                            "iconClass": "icon-mariadb",
                            "version": "${BASE_IMAGE_TAG}",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-mariadb.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "${BASE_IMAGE_NS}/${BASE_IMAGE}:${BASE_IMAGE_TAG}"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "SXAPI Demo ${APP_NAME}",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-mariadb",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "${APP_NAME} (mariadb)",
                            "description": "Database ${APP_NAME} (mariadb)",
                            "iconClass": "icon-mariadb",
                            "tags": "startx,mariadb,db,database,${APP_NAME}",
                            "supports": "mysql,mariadb",
                            "version": "latest"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                }
            },
            "stringData": {
                "MYSQL_ROOT_PASSWORD": "${MYSQL_ROOT_PASSWORD}",
                "MYSQL_USER": "${MYSQL_USER}",
                "MYSQL_PASSWORD": "${MYSQL_PASSWORD}"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_GIT}",
                        "ref": "${SOURCE_BRANCH}"
                    },
                    "contextDir": "${SOURCE_CONTEXT}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "startx-sv-mariadb:latest"
                        },
                        "env": [
                            {
                                "name": "SX_VERBOSE",
                                "value": "true"
                            },
                            {
                                "name": "SX_DEBUG",
                                "value": "true"
                            },
                            {
                                "name": "MYSQL_ROOT_PASSWORD",
                                "value": "${MYSQL_ROOT_PASSWORD}"
                            },
                            {
                                "name": "MYSQL_USER",
                                "value": "${MYSQL_USER}"
                            },
                            {
                                "name": "MYSQL_PASSWORD",
                                "value": "${MYSQL_PASSWORD}"
                            },
                            {
                                "name": "MYSQL_DATABASE",
                                "value": "${MYSQL_DATABASE}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}:latest"
                    }
                },
                "resources": {}
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "timeoutSeconds": 40,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "type": "${APP_TYPE}",
                            "provider": "startx",
                            "template": "sxapi-demo-openshift-mariadb-template",
                            "deploymentconfig": "${APP_NAME}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": " ",
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    },
                                    {
                                        "name": "MYSQL_ROOT_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}",
                                                "key": "MYSQL_ROOT_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MYSQL_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}",
                                                "key": "MYSQL_USER"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}",
                                                "key": "MYSQL_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "${MYSQL_DATABASE}"
                                    }
                                ],
                                "ports": [
                                    {
                                        "containerPort": 3306,
                                        "protocol": "TCP"
                                    }
                                ],
                                "command": [
                                    "/bin/sx-mariadb"
                                ],
                                "args": [
                                    "run"
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "${APP_NAME}-data",
                                        "mountPath": "/data"
                                    }
                                ],
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-mariadb",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-mariadb",
                                            "isReady"
                                        ]
                                    },
                                    "initialDelaySeconds": 15,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 20,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "volumes": [
                            {
                                "name": "${APP_NAME}-data",
                                "emptyDir": {
                                    "medium": ""
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-mariadb-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX",
                    "template.openshift.io/expose-uri": "mysql://{.spec.clusterIP}:{.spec.ports[?(.name==\"mysql\")].port}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "mysql",
                        "protocol": "TCP",
                        "port": 3306,
                        "targetPort": 3306,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "mariadb",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application (used for grouping)",
            "value": "backend"
        },
        {
            "name": "SOURCE_GIT",
            "displayName": "Application source-code repository",
            "description": "URL to the source code to use during build process",
            "value": "https://github.com/startxfr/sxapi-demo-openshift.git",
            "required": true
        },
        {
            "name": "SOURCE_BRANCH",
            "displayName": "Application source-code branch",
            "description": "Name of the branch to use for building this application",
            "value": "test",
            "required": true
        },
        {
            "name": "SOURCE_CONTEXT",
            "displayName": "Application source-code directory context",
            "description": "Name of the source directory where application code reside",
            "value": "db",
            "required": true
        },
        {
            "name": "BASE_IMAGE_NS",
            "displayName": "Base image namespace",
            "description": "Image namespace in docker repository where the build image reside. (if not in local repository, should look for dockerhub namespace)",
            "value": "startx",
            "required": true
        },
        {
            "name": "BASE_IMAGE",
            "displayName": "Base image name",
            "description": "Base image to use for buidling this application",
            "value": "sv-mariadb",
            "required": true
        },
        {
            "name": "BASE_IMAGE_TAG",
            "displayName": "Base image tag",
            "description": "Base image tag (release, flavour) to use for buidling this application",
            "value": "fc27",
            "required": true
        },
        {
            "name": "WEBHOOK_TOKEN",
            "displayName": "Webhook token",
            "description": "Secret token to use in github, gitlab or other to hook build action when code change",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{24}",
            "required": true
        },
        {
            "name": "MYSQL_ROOT_PASSWORD",
            "displayName": "Mysql root password",
            "description": "The mysql root password to use. Generated if not provided",
            "from": "[A-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_USER",
            "displayName": "Mysql user",
            "description": "Default user to create",
            "value": "test-user",
            "from": "[A-Z0-9]{8}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_PASSWORD",
            "displayName": "Mysql password",
            "description": "Password of the default user",
            "value": "test-pwd123",
            "from": "[A-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_DATABASE",
            "displayName": "Mysql database",
            "description": "name of the default database to create",
            "value": "demo",
            "required": true
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "description": "Maximum amount of memory the application can use.",
            "value": "512Mi",
            "required": true
        }
    ]
}
